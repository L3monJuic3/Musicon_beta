<h1 class="text-center my-3">Find the lesson that best suits you</h1>
<div class="container">
  <div class="cards">
    <% @lessons.each do |lesson| %>
      <%= link_to lesson_path(lesson), class: "text-decoration-none" do %>
        <div class="card-category sliding" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path("music-teacher") %>);">
          <h4><%= lesson.name %><h4>
          <p class="text-center"><%= lesson.description %></p>
          <p class="text-center">Learn more</p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
